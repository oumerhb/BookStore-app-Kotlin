<resources>
    <style name="Theme.OnlineBookStoreApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryContainer">@color/green_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Correct toolbar style attribute -->
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Other components -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
    </style>

    <style name="Widget.MyApp.Toolbar.Primary" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="subtitleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
<!--        <item name="menuIconTint">?attr/colorOnPrimary</item>-->
    </style>

</resources>
